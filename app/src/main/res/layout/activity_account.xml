<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark">

    <ImageView
        android:id="@+id/iv_account_icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_icon_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/main_icon_top_margin"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_hmn_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_account_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_fields_margin_side"
        android:layout_marginTop="@dimen/main_fields_margin_side"
        android:layout_marginRight="@dimen/main_fields_margin_side"
        android:hint="@string/account_hint_first_name"
        android:enabled="false"
        android:inputType="none"
        android:lines="1"
        android:textColor="@android:color/primary_text_dark"
        android:textColorHint="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_account_icon" />

    <EditText
        android:id="@+id/et_account_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_fields_margin_side"
        android:layout_marginRight="@dimen/main_fields_margin_side"
        android:enabled="false"
        android:hint="@string/account_hint_last_name"
        android:inputType="none"
        android:lines="1"
        android:textColor="@android:color/primary_text_dark"
        android:textColorHint="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_account_first_name" />

</androidx.constraintlayout.widget.ConstraintLayout>