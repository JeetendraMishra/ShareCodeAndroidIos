<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hackathon.sharecodeandroidios.MainActivity">

    <EditText
        android:id="@+id/main_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="@string/main_hint_email"
        android:layout_marginLeft="@dimen/main_fields_margin_side"
        android:layout_marginRight="@dimen/main_fields_margin_side"/>

    <EditText
        android:id="@+id/main_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/main_hint_password"
        android:layout_marginLeft="@dimen/main_fields_margin_side"
        android:layout_marginRight="@dimen/main_fields_margin_side"
        app:layout_constraintTop_toBottomOf="@id/main_email" />

    <Button
        android:id="@+id/main_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_fields_margin_side"
        android:layout_marginRight="@dimen/main_fields_margin_side"
        android:text="@string/main_button_text"
        android:textSize="@dimen/main_submit_text_size"
        app:layout_constraintTop_toBottomOf="@id/main_password"/>

    <TextView
        android:id="@+id/main_text"
        android:textSize="42sp"
        android:layout_margin="5sp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>